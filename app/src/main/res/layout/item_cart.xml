<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- TextView Order ID -->
        <TextView
            android:id="@+id/textViewOrderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Order ID"
            android:textColor="#F44336"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- ImageView for Laptop Image -->
        <ImageView
            android:id="@+id/imageViewLaptop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/_632848"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewOrderId" />

        <!-- TextView Name -->
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Name"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageViewLaptop"
            app:layout_constraintTop_toTopOf="@id/imageViewLaptop" />

        <!-- TextView Address -->
        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Address"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageViewLaptop"
            app:layout_constraintTop_toBottomOf="@id/textViewName" />

        <!-- TextView Phone -->
        <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Phone"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageViewLaptop"
            app:layout_constraintTop_toBottomOf="@id/textViewAddress" />

        <!-- TextView Payment ID -->
        <TextView
            android:id="@+id/textViewPaymentId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Payment ID"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageViewLaptop"
            app:layout_constraintTop_toBottomOf="@id/textViewPhone" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@id/imageViewLaptop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewLaptop"
            android:layout_marginTop="8dp"/>

        <!-- TextView Laptop Details -->
        <TextView
            android:id="@+id/ViewMoreBTN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="View More"
            android:textSize="14sp"
            android:textColor="@color/blue_grey"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="@id/imageViewLaptop"
            app:layout_constraintTop_toBottomOf="@id/divider"
            android:layout_marginTop="8dp"/>

        <!-- TextView Total Price -->
        <TextView
            android:id="@+id/textViewTotalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Total Price"
            android:textColor="#00BCD4"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/imageViewLaptop"
            app:layout_constraintTop_toBottomOf="@id/ViewMoreBTN" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
