<!-- order_item_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- RecyclerView for displaying orders -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:background="@drawable/cat_1_background"/>

    <!-- LinearLayout for order details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:background="@drawable/cat_1_background">

        <!-- Cart ID -->
        <TextView
            android:id="@+id/cartIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cart ID:"
            android:textStyle="bold"/>

        <!-- Họ tên -->
        <TextView
            android:id="@+id/fullNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ tên:"
            android:textStyle="bold"/>

        <!-- Số điện thoại -->
        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại:"
            android:textStyle="bold"/>

        <!-- Địa chỉ -->
        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ:"
            android:textStyle="bold"/>

        <!-- Divider line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Danh sách laptop mua -->
        <TextView
            android:id="@+id/laptopsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laptop mua:"
            android:textStyle="bold"/>

        <!-- Tổng tiền -->
        <TextView
            android:id="@+id/totalPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</LinearLayout>
